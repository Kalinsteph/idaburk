{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="article">
{% for article in articles %}
    <article>
        <h2>{{ article.titre }}</h2>
        <div class="metadata">ecrit le {{ article.dateCreation| date('d/m/Y') }} à {{ article.dateCreation | date('H:i')}} dans la catégorie politique</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            {{ article.contenu | raw }}
            <a href="{{path('blog_show', {'id': article.id })}}" class="btn btn-primary">Lire la suite</a>
        </div>
    </article>
{% endfor %}

</section>
{% endblock %}
